<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_encode"
    android:background="@color/white">


        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomNavigationView">

            <TextView
                android:id="@+id/rectangle_7"
                android:layout_width="699dp"
                android:layout_height="60dp"
                android:background="#090909" />

        </FrameLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:backgroundTint="@color/black"
            app:itemTextAppearanceInactive="@style/BottomNavigationViewText"
            app:labelVisibilityMode="labeled"
            app:itemIconSize="25dp"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/bottom_navigation_menu" />


    <ImageButton
        android:id="@+id/userbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_account_circle_24"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="350dp"
        />

    <EditText
        android:id="@+id/key"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="410dp"
        android:background="@drawable/rectangle1"
        android:hint="Enter Secret Key"
        android:paddingLeft="12dp"
        />


    <EditText
        android:id="@+id/message"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="350dp"
        android:background="@drawable/rectangle1"
        android:hint="Enter Message"
        android:paddingLeft="12dp"
        />

<!--    <ImageView-->
<!--        android:id="@+id/imageview"-->
<!--        android:layout_width="210dp"-->
<!--        android:layout_height="239dp"-->
<!--        android:layout_marginLeft="75dp"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_marginTop="140dp"-->
<!--        android:background="#D9D9D9"-->
<!--        />-->

    <ImageButton
        android:id="@+id/placeholder"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/placeholder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:background="@drawable/textview_border"
        android:clickable="true"
        android:focusable="true"
        />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        android:hint="Choose Image"
        />

    <Button
        android:id="@+id/encode_button"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Encode"
        android:textColor="@color/white"
        android:layout_marginLeft="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="470dp"
        android:background="@drawable/round_curves"
        />

    <ImageButton
        android:id="@+id/download"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="30dp"
        android:background="@color/white"
        android:src="@mipmap/ic_download_foreground"
        android:scaleType="fitStart"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="70dp"
        android:text="Download Encoded Image"/>

    <TextView
        android:id="@+id/whether_encoded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="570dp"
        android:layout_marginLeft="40dp"/>


</RelativeLayout>