<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_about">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigationView"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:backgroundTint="@color/black"
        app:itemTextAppearanceInactive="@style/BottomNavigationViewText"
        app:labelVisibilityMode="labeled"
        app:itemIconSize="25dp"
        android:background="#FAF6F6"
        app:menu="@menu/bottom_navigation_menu"/>

    <TextView
        android:id="@+id/rectangle_7"
        android:layout_width="450dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#000000"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_account_circle_24"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="350dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT"
        android:textStyle="bold"
        android:textSize="38dp"
        android:textColor="@color/black"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:text="Description"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/textview_border"
        android:layout_marginTop="200dp"/>

    <TextView
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:text="Web Service"
        android:textSize="16dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:background="@drawable/textview_border"
        android:layout_marginTop="265dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:text="Compression"
        android:textSize="16dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:background="@drawable/textview_border"/>

    <TextView
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:text="Developers: Khushi Kothari and Yuvika Singh"
        android:textSize="16dp"
        android:layout_marginTop="395dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:background="@drawable/textview_border"/>

</RelativeLayout>